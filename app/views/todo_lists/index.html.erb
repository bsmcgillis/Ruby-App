<!-- Display any notices -->
<% if notice.class.name == "String" %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<h1>Todo Lists</h1>
<hr/>

<!-- Display each todo list -->
<% @todo_lists.each do |todo_list| %>
<div class="todo-list">
    <h2 class="list-title">
        <%= link_to todo_list.title, todo_list %>
    </h3>
    <h5 class="list-description">
        <%= todo_list.description %>
    </h5>
</div>
            
<% end %>

<%= link_to "New Todo List", new_todo_list_path, :class => "btn btn-primary btn-default btn-block top-margin" %>


<!-- Utilizing bootstrap_form gem to nicely format forms with bootstrap -->
<%= bootstrap_form_for(@todo_list, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <% if @todo_list.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>

      <ul>
      <% @todo_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit "Update List" %>
  </div>
<% end %>

<!-- Check for any notices or alerts and display them -->
<% if notice.class.name == "String" %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert.class.name == "String" %>
    <p id="alert" class="alert alert-danger"><%= alert %></p>
<% end %>

